<style>
  table {
  border-collapse: collapse;
  width: 100%;
}

th, td {
  padding: 8px;
  text-align: left;
  border-bottom: 1px solid #ddd;
}
</style>

<p style="color: green"><%= notice %></p>
<div class="d-flex justify-content-between align-items-center">
  <h1>Rewards</h1>
  <%= link_to "New reward", new_reward_path,class:"btn btn-outline-primary" %>
</div>

<div id="rewards">
  <table class="table table-hover">
    <thead style="background: #7969b3;color:white">
      <tr>
        <th>S.No</th>
        <th>Trans Name</th>
        <th>Trans-Type </th>
        <th>Logo </th>
        <th>Coins Amount </th>
        <th>Conversion Amount</th>
        <th>Show</th>
      </tr>
    </thead>
    <tbody>
      <% @rewards.each_with_index do |reward,index| %>
      <tr>
        <td><%= index+1 %></td>
        <%= render reward %> 
          <td><%= link_to "Show this reward", reward %></td>
      </tr>
      <% end %>
</div>


