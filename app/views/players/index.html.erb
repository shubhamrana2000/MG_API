<style>
  table {
  border-collapse: collapse;
  width: 100%;
}

th, td {
  padding: 8px;
  text-align: left;
  border-bottom: 1px solid #ddd;
}
</style>

<div class="d-flex justify-content-between align-items-center mb-0">
  <h1 >Players</h1>
  <%= link_to "New player", new_player_path,class:"btn btn-outline-primary" %>
</div>
<div id="players">
  <table class="table table-hover">
    <thead style="background: #7952b3;color:white">
      <tr>
        <th>S.No</th>
        <th>team-id </th>
        <th>Name </th>
        <th>Category</th>
        <th>Show </th>
      </tr>
    </thead>
    <tbody>
  <% @players.each_with_index do |player,index| %>
    <tr>
      <td><%= index+1 %></td>
      <%= render player %>
      <td><%= link_to "Show this player", player,class:"btn btn-outline-success" %></td>
    </tr>
  <% end %>
  </tbody>
  </table>
</div>

