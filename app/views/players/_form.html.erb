<%= form_with(model: player) do |form| %>
  <% if player.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(player.errors.count, "error") %> prohibited this player from being saved:</h2>

      <ul>
        <% player.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :player_name, style: "display: block" %>
    <%= form.text_field :player_name %>
  </div>

  <div>
    <%= form.label :team_id, style: "display: block" %>
    <%= form.collection_select(:team_id,Team.all,:id,:team_name) %>
  </div>

  <div>
    <% Player::Tags.each do |alpha| %>
      <br><%= form.label alpha %>
      <%= form.check_box :category,{multiple: true},alpha,nil %>
      <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
