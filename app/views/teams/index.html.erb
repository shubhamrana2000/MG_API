<style>
  table {
  border-collapse: collapse;
  width: 100%;
}

th, td {
  padding: 8px;
  text-align: left;
  border-bottom: 1px solid #ddd;
}
</style>


<div class="d-flex justify-content-between align-items-center mb-0">
  <h1>Teams</h1>
  <%= link_to "New team", new_team_path ,class:"btn btn-outline-primary"%>
</div>
<div id="teams">
  <table class="table table-hover">
    <thead style="background: #7952b3;color:white">
      <tr>
        <th>S.No</th>
        <th>Team-Name </th>
        <th>Team-Short-Name </th>
        <th>Team-Logo </th>
        <th>Players</th>
        <th>Options</th>
      </tr>
    </thead>
    <tbody>
      <% @teams.each_with_index do |team,index| %>
        <tr>
          <td><%= index+1 %></td>
          <%= render team %>
          <td>
            <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"></a>
              <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                  <li style="text-align: center;"><%= link_to "Show", team ,class:"dropdown-item"%></li>
                  <li style="text-align: center;"><%= link_to "Edit", edit_team_path(team),class:"dropdown-item"%></li>
              </ul>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

