<div class="d-flex justify-content-between align-items-center">
  <h1>Tasks</h1>
  <%= link_to "New task", new_task_path,class:"btn btn-outline-primary" %>
</div>
<div id="tasks">
  <table class="table table-hover">
    <thead style="background: #7952b3;color:white">
      <tr>
        <th>S.No</th>
        <th>Task Name</th>
        <th>TaskImgUrl </th>
        <th>TaskAmt</th>
        <th>TaskVal</th>
        <th>Show</th>
      </tr>
    </thead>
    <tbody>
  <% @tasks.each_with_index do |task,index| %>
  <tr>
      <td><%= index+1 %></td>
      <%= render task %>
      <td><%= link_to "Show this task", task %> </td>
  </tr>
  <% end %>
</div>
<%= will_paginate @tasks, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
